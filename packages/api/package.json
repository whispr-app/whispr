{
  "name": "@whispr/api",
  "version": "0.1.0",
  "description": "Decentralised server instance",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch . -e ts,json,env --exec \"pnpm build:esm && NODE_ENV=development node dist/index.mjs\"",
    "dev:windows": "nodemon --watch . -e ts,json,env --exec \"pnpm build:esm && set NODE_ENV=development && node dist/index.mjs\"",
    "build": "concurrently \"npm:build:*\"",
    "build:dts": "tsc --declaration --emitDeclarationOnly",
    "build:esm": "esbuild src/index.ts --outfile=dist/index.mjs --format=esm --packages=external --platform=node --sourcemap --tsconfig=tsconfig.json --alias:@lib=./src/lib --bundle --define:process.env.COMMIT_HASH=\"\\\"$(git rev-parse HEAD)\\\"\"",
    "build:cjs": "esbuild src/index.ts --outfile=dist/index.cjs --format=cjs --packages=external --platform=node --sourcemap --tsconfig=tsconfig.json --alias:@lib=./src/lib --bundle --define:process.env.COMMIT_HASH=\"\\\"$(git rev-parse HEAD)\\\"\"",
    "serve": "node dist/index.js",
    "lint": "eslint src",
    "prisma:update": "pnpm exec prisma db push && pnpm exec prisma generate",
    "prisma:studio": "pnpm exec prisma studio",
    "prisma:reset": "esbuild --platform=node --format=esm --bundle --packages=external ./scripts/prismaReset.ts | node"
  },
  "keywords": [],
  "author": "Morgan Dilling",
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.17",
    "@types/response-time": "^2.3.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "esbuild": "0.20.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@3xpo/fetch-prisma": "^0.1.4",
    "@prisma/client": "^5.9.1",
    "@whispr/types": "workspace:^",
    "@whispr/web": "workspace:^",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "mime-types": "^2.1.35",
    "response-time": "^2.3.2",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  }
}
